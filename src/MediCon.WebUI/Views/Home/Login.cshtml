@using MediCon.WebUI.Controllers.Home;
@using MediCon.WebUI.Configurations.Helper;
@using MediCon.WebUI.Controllers.Home.ViewModels
@model HomeLoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" class="light-style layout-navbar-fixed layout-menu-fixed layout-compact" dir="ltr"
      data-theme="theme-default" data-template="vertical-menu-template-no-customizer-starter">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="~/BL Icons/logo.png" type="image/x-icon" />
    <title>@Model.PageTitle</title>
    @*
    <link rel="stylesheet" href="~/vuexy/fonts/tabler-icons.css" />
    <link rel="stylesheet" href="~/vuexy/css/core.css" />
    <link rel="stylesheet" href="~/vuexy/css/theme-default.css" />
    <link rel="stylesheet" href="~/vuexy/css/demo.css" />
    <link rel="stylesheet" href="~/vuexy/libs/node-waves/node-waves.css" />
    <link rel="stylesheet" href="~/vuexy/libs/perfect-scrollbar/perfect-scrollbar.css" />
    <link rel="stylesheet" href="~/vuexy/libs/form-validation/form-validation.css" />
    <link rel="stylesheet" href="~/vuexy/css/page-auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/vuexy/libs/block-ui/block-ui.css" /> *@

    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/vuexy/css/login/bootstrap.min.css">
    <link rel="stylesheet" href="~/vuexy/css/login/style.css">

    <script src="~/vuexy/js/helpers.js"></script>
    <script src="~/vuexy/js/config.js"></script>
    <script src="~/vuexy/libs/jquery/jquery.js"></script>
</head>

<body>
    <!-- Content -->
    @*
    @if (Model.IsError)
    {
    <div id="alert" class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
    } *@
    <div class="content p-4">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="left-content">
                        <img src="~/vuexy/img/login/sideimage.png" alt="Image" class="img-fluid">
                    @*     <div class="left-text">
                            <div class="com-logo">
                                <img src="~/vuexy/img/login/BL-new-Logo.png" alt="">
                            </div>
                            <h1>Welcome to the Health Checkup</h1>
                        <p>Online based simplification of Health Checkup.</p> 
                        </div> *@
                    </div>
                </div>
                <div class="col-md-6 contents">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="com-logo">
                                <img src="~/vuexy/img/login/BL-new-Logo.png" alt="">
                            </div>
                            <div class="mb-4 h-title">
                                <h3 style="font-size: 30px;font-weight: bold;">
                                    Login your account
                                </h3>
                             @*    <p class="mb-4">Please login to your account</p> *@
                            </div>

                       
                            <form id="formAuthentication" class="mb-3"
                                  asp-controller="@nameof(HomeController).GetControllerName()"
                                  asp-action="@nameof(HomeController.Login)" method="post">
                                <input type="hidden" value="@Model.ReturnURL" name="ReturnURL" />


                                <div class="form-group first">
                                    <input style="border: 1px solid #bfbfbf;" type="text" class="form-control" id="userName" name="userName"
                                           placeholder="Enter your email or username"
                                           value="@Model.UserLoginRequestModel?.UserName" autofocus />
                                </div>


                                <div class="form-group last mb-2">
                                    <input style="border: 1px solid #bfbfbf;" type="password" id="password" class="form-control" name="password"
                                           placeholder="Enter password" value="@Model.UserLoginRequestModel?.Password"
                                           aria-describedby="password" />
                                    @* <span class="input-group-text cursor-pointer"><i
                                    class="ti ti-eye-off"></i></span> *@
                                </div>

                                <div class="d-flex mb-4 align-items-end">
                                    @* <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
                                    *@

                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember-me"
                                               name="rememberMe" @(Model.UserLoginRequestModel?.RememberMe == true
                                               ? "checked" : string.Empty) value="true" />
                                        <label class="form-check-label" for="remember-me" style="color: #818181;">
                                            Remember Me
                                        </label>
                                    </div>

                                </div>
                                @if (Model.IsError)
                                {
                                    <div id="alert" class="alert alert-danger" role="alert">@Model.ErrorMessage</div>
                                }
                                <button class="btn btn-block btn-primary" type="submit">Login</button>

                                @* <div class="d-flex justify-content-center other-login">
                                <span class="d-block text-left my-4 text-muted"> Or Login with </span>
                                </div>

                                <div class="social-login mb-3">
                                <a href="#" class="facebook"> <img src="~/vuexy/img/google.svg" alt=""> Google</a>
                                <a href="#" class="google"> <img src="~/vuexy/img/fb_facebook.svg" alt="">
                                Facebook</a>
                                </div>

                                <div class="d-flex justify-content-center signups">
                                <a href="#"><span class="text-muted"> Don't have an account? </span> Signup</a>
                                </div> *@


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <script src="~/vuexy/libs/bootstrap/bootstrap.js"></script>
    <script src="~/vuexy/libs/node-waves/node-waves.js"></script>
    <script src="~/vuexy/js/main.js"></script>
    <script src="~/vuexy/libs/block-ui/block-ui.js"></script>
    <script src="~/js/login.js" asp-append-version="true"></script>

    <script src="~/vuexy/libs/form-validation/popular.js"></script>
    <script src="~/vuexy/libs/form-validation/bootstrap5.js"></script>
    <script src="~/vuexy/libs/form-validation/auto-focus.js"></script>
 
    
</body>

</html>